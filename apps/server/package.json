{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "wrangler deploy --dry-run",
		"check-types": "tsc -b",
		"dev": "wrangler dev --port=3000",
		"deploy": "wrangler deploy",
		"db:generate": "drizzle-kit generate",
		"db:migrate:local": "drizzle-kit push --config=drizzle.local.config.ts",
		"db:migrate:remote": "wrangler d1 migrations apply onepercent-stats-new --remote",
		"db:studio": "drizzle-kit studio",
		"db:sync": "bun run ./scripts/sync-local-db.ts"
	},
	"dependencies": {
		"@hono/zod-validator": "^0.7.2",
		"@libsql/client": "^0.15.9",
		"better-auth": "^1.3.4",
		"csv-parse": "^6.1.0",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.2",
		"hono": "^4.8.2",
		"zod": "^4.0.2"
	},
	"devDependencies": {
		"tsdown": "^0.12.9",
		"typescript": "^5.8.2",
		"drizzle-kit": "^0.31.2",
		"wrangler": "^4.27.0",
		"glob": "^11.0.0",
		"@types/glob": "^8.1.0"
	}
}
